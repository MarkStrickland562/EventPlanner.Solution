@{
  Layout = "_Layout";
}

<h1 id="pageTitle">EVENTS</h1>
<h5>Click on an Event to See its Details</h5>
<h5><a href="/events/new">Add a New Event</a><h/h5>

@if (Model.Count != 0)
{
  <h5><a href="/events/delete">Delete All Events</a></h5>
}
<br>
<br>

@if (Model.Count != 0)
{
  @foreach (var selectedEvent in Model)
  {
    <ul class="list-group list-group-horizontal">
      <li class="list-group-item"><a href='/events/@selectedEvent.GetId()'>@selectedEvent.GetEventName()</a></li>
      <li class="list-group-item"><a href="/events/@selectedEvent.GetId()/edit">EDIT</a></li>
      <li class="list-group-item"><a href='/events/@selectedEvent.GetId()/delete'><i class="far fa-times-circle"></i></a></li>
    </ul>
  }
}
