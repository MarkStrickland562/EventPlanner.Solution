  Layout = "_Layout";
}

<h1 id="pageTitle"><h2>@Model["selectedEvent"].GetEventName()</h2></h1>
<br>
<a href="/events/@Model["selectedEvent"].GetId()/edit">EDIT</a>
<hr>

<br>
