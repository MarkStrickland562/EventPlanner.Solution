@{
  Layout = "_Layout";
}

<h1 id="pageTitle">INVITES LIST</h1>
<h5>Click on an Invitee to See its Details</h5>
<h5><a href="/invitees/new">Add a New Invitee</a><h/h5>
@if (Model.Count != 0)
{
  <h5><a href="/invitees/delete">Delete All Invitees</a></h5>
}
<br>
<br>

  @if (Model.Count != 0)
{
    @foreach (var invites in Model)
    {
      <ul class="list-group list-group-horizontal">
        <li class="list-group-item"><a href='/invitees/@invites.GetId()'>@invites.GetInviteeName()</a></li>
        <li class="list-group-item"><a href="/invitees/@invites.GetId()/edit">EDIT</a></li>
        <li class="list-group-item"><a href='/invitees/@invites.GetId()/delete'><i class="far fa-times-circle"></i></a></li>
      </ul>
    }
}
