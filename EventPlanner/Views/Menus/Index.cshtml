@{
  Layout = "_Layout";
}

<h1 id="pageTitle">MENUS LIST</h1>
<br>

  @if (Model.Count != 0)
{
    @foreach (var menu in Model)
    {
      <ul class="list-group list-group-horizontal">
        <li class="list-group-item"><a href='/menus/@menu.GetId()'>@menu.GetMenuTheme()</a></li>
        <li class="list-group-item"><a href="/menus/@menu.GetId()/edit">EDIT  <i class="fas fa-edit"></i></a></li>
        <li class="list-group-item"><a href='/menus/@menu.GetId()/delete'><i class="far fa-times-circle"></i></a></li>
      </ul>
    }
}


  <hr>
  <br>
  <div class="container">
  <a href="/menus/new">new menu</a>
   <br>
  </div>
