@{
  Layout = "_Layout";
}

<h1 id="pageTitle">MENUS</h1>
<h5>Click on a Menu to See its Details</h5>
<h5><a href="/menus/new">Add a New Menu</a><h/h5>
@if (Model.Count != 0)
{
  <h5><a href="/menus/delete">Delete All Menus</a></h5>
}
<br>
<br>

@if (Model.Count != 0)
{
  @foreach (var menu in Model)
  {
    <ul class="list-group list-group-horizontal">
      <li class="list-group-item"><a href='/menus/@menu.GetId()'>@menu.GetMenuTheme()</a></li>
      <li class="list-group-item"><a href="/menus/@menu.GetId()/edit">EDIT</a></li>
      <li class="list-group-item"><a href='/menus/@menu.GetId()/delete'><i class="far fa-times-circle"></i></a></li>
    </ul>
  }
}
