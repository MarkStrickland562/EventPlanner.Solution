@{
  Layout = "_Layout";
}

<h1 id="pageTitle">STORES</h1>
<h5>Click on a Store to See its Details</h5>
<h5><a href="/stores/new">Add a New Store</a><h/h5>
@if (Model.Count != 0)
{
  <h5><a href="/stores/delete">Delete All Stores</a></h5>
}
<br>
<br>

  @if (Model.Count != 0)
{
    @foreach (var stores in Model)
    {
      <ul class="list-group list-group-horizontal">
        <li class="list-group-item"><a href='/stores/@stores.GetId()'>@stores.GetStoreName()</a></li>
        <li class="list-group-item"><a href="/stores/@stores.GetId()/edit">EDIT</a></li>
        <li class="list-group-item"><a href='/stores/@stores.GetId()/delete'><i class="far fa-times-circle"></i></a></li>
      </ul>
    }
}
