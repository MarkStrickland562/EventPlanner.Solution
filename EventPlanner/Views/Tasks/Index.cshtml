@{
  Layout = "_Layout";
}

<h1 id="pageTitle">TASKS</h1>
<h5>Click on a Task to See its Details</h5>
<h5><a href="/tasks/new">Add a New Task</a><h/h5>
@if (Model.Count != 0)
{
  <h5><a href="/tasks/delete">Delete All Tasks</a></h5>
}
<br>
<br>

  @if (Model.Count != 0)
{
    @foreach (var tasks in Model)
    {
      <ul class="list-group list-group-horizontal">
        <li class="list-group-item"><a href='/tasks/@tasks.GetId()'>@tasks.GetTaskDescription()</a></li>
        <li class="list-group-item"><a href="/tasks/@tasks.GetId()/edit">EDIT</a></li>
        <li class="list-group-item"><a href='/tasks/@tasks.GetId()/delete'><i class="far fa-times-circle"></i></a></li>
      </ul>
    }
}
